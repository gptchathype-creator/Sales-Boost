# Telegram Bot (from @BotFather) — use TELEGRAM_BOT_TOKEN or BOT_TOKEN
TELEGRAM_BOT_TOKEN=

# OpenAI API
OPENAI_API_KEY=

# Database (SQLite)
# Local: file:./dev.db
# Railway: file:/data/dev.db (with volume mounted at /data)
DATABASE_URL="file:./dev.db"

# Admin Telegram IDs (comma-separated) — required for /admin
ADMIN_TELEGRAM_IDS=123456789,@username

# Production (Railway): HTTPS URL of your app, e.g. https://salesboost.railway.app
# Local dev: leave empty — tunnel will be used
# MINI_APP_URL=https://your-app.railway.app

# Optional: allow admin panel in browser on localhost without Telegram (dev only)
# ALLOW_DEV_ADMIN=true

# Optional: ElevenLabs (TTS for client voice messages)
# ELEVENLABS_API_KEY=
# ELEVENLABS_VOICE_ID=your_voice_id_here

# Optional: Proxy for OpenAI (if API blocked in your region)
# HTTPS_PROXY=http://127.0.0.1:7890

# PORT=3000


# ========== Call-test (Vox smoke-test server) — тестовые звонки ==========
# Нужны для модуля apps/vox-smoke-test-server. Подробно: INTEGRATION-CALL-TEST.md
#VOX_ACCOUNT_ID=10308320
#VOX_API_KEY=...
#VOX_APP_ID=49720003
#VOX_SCENARIO_NAME=smoke_test
#VOX_RULE_NAME=smoke_test_rule
#VOX_CALLER_ID=+79001234567
# Номер по умолчанию для одного тестового звонка (POST /call без body)
#VOX_TEST_TO=+79771231212
# Несколько тестовых номеров для разработки (через запятую, без пробелов)
#VOX_TEST_NUMBERS=+79771231212,+79001234567,+79001234568
#PUBLIC_BASE_URL=https://maintained-logging-recent-ourselves.trycloudflare.com
#VOX_SMOKE_PORT=3001
#DISABLE_VOX_SIGNATURE_CHECK=true

# Голосовой диалог (ASR → наш нейрон → TTS): сценарий voice_dialog и URL основного приложения
# Эти переменные также используются вкладкой «Звонок» в админке (инициация звонка с сервера).
# VOICE_DIALOG_BASE_URL — базовый URL приложения с POST /voice/dialog (порт 3000 или туннель)
#VOICE_DIALOG_BASE_URL=https://your-main-app.trycloudflare.com
# VOICE_USE_STREAM=true — передавать stream_url (WebSocket). Туннели часто не поддерживают WS — используйте false или не задавайте (только POST).
#VOICE_USE_STREAM=false
# Имя сценария в Voximplant для диалога (по умолчанию voice_dialog)
#VOX_DIALOG_SCENARIO_NAME=voice_dialog
# Правило маршрутизации, к которому привязан voice_dialog (обязательно — иначе при dialog: true запустится smoke_test)
#VOX_DIALOG_RULE_NAME=voice_dialog_rule