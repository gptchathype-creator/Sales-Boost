# Telegram Bot (from @BotFather) — use TELEGRAM_BOT_TOKEN or BOT_TOKEN
TELEGRAM_BOT_TOKEN=

# OpenAI API
OPENAI_API_KEY=

# Database (SQLite)
# Local: file:./dev.db
# Railway: file:/data/dev.db (with volume mounted at /data)
DATABASE_URL="file:./dev.db"

# Admin Telegram IDs (comma-separated) — required for /admin
ADMIN_TELEGRAM_IDS=123456789,@username

# Production (Railway): HTTPS URL of your app, e.g. https://salesboost.railway.app
# Local dev: leave empty — tunnel will be used
# MINI_APP_URL=https://your-app.railway.app

# Optional: allow admin panel in browser on localhost without Telegram (dev only)
# ALLOW_DEV_ADMIN=true

# Optional: ElevenLabs (TTS for client voice messages)
# ELEVENLABS_API_KEY=
# ELEVENLABS_VOICE_ID=your_voice_id_here

# Optional: Proxy for OpenAI (if API blocked in your region)
# HTTPS_PROXY=http://127.0.0.1:7890

# PORT=3000
